<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/kuang_no_right"
                android:scaleType="center"
                android:src="@drawable/ic_stairs" />

            <View
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/kuang_top" />

            <TextView
                android:id="@+id/building_1_5_506"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:background="@drawable/kuang_green"
                android:text="506" />

            <TextView
                android:id="@+id/building_1_5_507"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:background="@drawable/kuang_green"
                android:text="507" />

            <TextView
                android:id="@+id/building_1_5_508"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:background="@drawable/kuang_green"
                android:text="508" />

            <TextView
                android:id="@+id/building_1_5_509"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:background="@drawable/kuang_green"
                android:text="509" />

            <TextView
                android:id="@+id/building_1_5_510"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:background="@drawable/kuang_green"
                android:text="510" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="75dp"
                android:background="@drawable/kuang_no_bottom"
                android:scaleType="center"
                android:src="@drawable/ic_stairs" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="530dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/kuang_left_right">

        </LinearLayout>

        <LinearLayout
            android:layout_width="530dp"
            android:layout_height="270dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/kuang_left_right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/kuang"
                    android:gravity="center"
                    android:text="男厕"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/ic_stairs" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/kuang"
                    android:gravity="center"
                    android:text="女厕"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:background="@drawable/kuang"
                android:gravity="center"
                android:text="内院"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="1"
                android:gravity="center"
                android:text="休息厅"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:background="@drawable/kuang_gray"
                android:ems="1"
                android:text="办公室" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="530dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/kuang_left_right">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/kuang_no_right"
                android:scaleType="center"
                android:src="@drawable/ic_stairs" />

            <View
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/kuang_bottom" />

            <TextView
                android:id="@+id/building_1_5_505"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:background="@drawable/kuang_green"
                android:text="505" />

            <TextView
                android:id="@+id/building_1_5_504"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:background="@drawable/kuang_green"
                android:text="504" />

            <TextView
                android:id="@+id/building_1_5_503"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:background="@drawable/kuang_green"
                android:text="503" />

            <TextView
                android:id="@+id/building_1_5_502"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:background="@drawable/kuang_green"
                android:text="502" />

            <TextView
                android:id="@+id/building_1_5_501"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:background="@drawable/kuang_green"
                android:text="501" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="75dp"
                android:background="@drawable/kuang_no_top"
                android:scaleType="center"
                android:src="@drawable/ic_stairs" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>