<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/kuang_no_right"
                android:scaleType="center"
                android:src="@drawable/ic_stairs" />

            <View
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/kuang_top" />
            <Button
                android:id="@+id/building_1_4_405"
                android:layout_width="45dp"
                android:layout_height="95dp"
                android:background="@drawable/kuang"
                android:text="405" />
            <Button
                android:id="@+id/building_1_4_406"
                android:layout_width="135dp"
                android:layout_height="95dp"
                android:background="@drawable/kuang"
                android:text="406" />

            <Button
                android:id="@+id/building_1_4_407"
                android:layout_width="135dp"
                android:layout_height="95dp"
                android:background="@drawable/kuang"
                android:text="407" />

            <Button
                android:id="@+id/building_1_4_408"
                android:layout_width="135dp"
                android:layout_height="95dp"
                android:background="@drawable/kuang"
                android:text="408" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="95dp"
                android:background="@drawable/kuang_no_bottom"
                android:scaleType="center"
                android:src="@drawable/ic_stairs" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="530dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/kuang_left_right">

        </LinearLayout>

        <LinearLayout
            android:layout_width="530dp"
            android:layout_height="270dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/kuang_left_right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/kuang"
                    android:gravity="center"
                    android:text="男厕"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/ic_stairs" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/kuang"
                    android:gravity="center"
                    android:text="女厕"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:background="@drawable/kuang"
                android:gravity="center"
                android:text="内院"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/building_1_4_400"
                android:layout_width="130dp"
                android:layout_height="185dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/kuang"
                android:text="400" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="530dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/kuang_left_right">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/kuang_no_right"
                android:scaleType="center"
                android:src="@drawable/ic_stairs" />

            <View
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/kuang_bottom" />

            <Button
                android:id="@+id/building_1_4_404"
                android:layout_width="45dp"
                android:layout_height="95dp"
                android:background="@drawable/kuang"
                android:text="404" />

            <Button
                android:id="@+id/building_1_4_403"
                android:layout_width="135dp"
                android:layout_height="95dp"
                android:background="@drawable/kuang"
                android:text="403" />

            <Button
                android:id="@+id/building_1_4_402"
                android:layout_width="135dp"
                android:layout_height="95dp"
                android:background="@drawable/kuang"
                android:text="402" />

            <Button
                android:id="@+id/building_1_4_401"
                android:layout_width="135dp"
                android:layout_height="95dp"
                android:background="@drawable/kuang"
                android:text="401" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="95dp"
                android:background="@drawable/kuang_no_top"
                android:scaleType="center"
                android:src="@drawable/ic_stairs" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>