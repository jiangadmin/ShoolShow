<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jiang.shoolshow.view.TitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/home"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/item_bottom_bg"
            android:drawableLeft="@drawable/ic_home"
            android:text="主页" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </FrameLayout>

            <LinearLayout
                android:layout_width="286dp"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:background="@drawable/item_bottom_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/left"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_left" />

                <ImageView
                    android:id="@+id/right"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/ic_right" />

                <ImageView
                    android:id="@+id/home"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="21dp"
                    android:src="@drawable/ic_home" />

                <ImageView
                    android:id="@+id/help"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_help" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:layout_marginTop="21dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="221dp"
                    android:layout_height="143dp"
                    android:background="@drawable/item_right_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_right_top_bg"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="宣传栏"
                        android:textColor="@color/white" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="巴拉巴拉" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/item_right_bg">

                    <ImageView
                        android:id="@+id/weather_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="45dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:layout_toEndOf="@+id/weather_icon"
                        android:layout_toRightOf="@+id/weather_icon"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/weather_tianqi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/weather_wendu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/item_right_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_2_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_right_top_bg"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="教室分布"
                        android:textColor="@color/white" />

                    <RelativeLayout
                        android:id="@+id/item_2_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp">

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>